<%- layout('layout') %>

<div class="container">
    <div class="row align-items-center">
        <div id="signup-id" class="col-lg-6">

            <form method="post" class="login" id="signup" action="/login">
                <div class="text-center">
                    <% if (message.length > 0) { %>
                        <div class="btn btn-danger">
                            <%= message %>
                        </div>
                    <% } %>
                </div>
                <h1 class="text-center">Login</h1>
                <div class="form-group">
                    <label>Email: </label>
                    <input type="email" class="form-control" name="email" placeholder="Enter mail here" required>
                </div>
                <div class="form-group">
                    <label>password: </label>
                    <input type="password" class="form-control" name="password" placeholder="Enter password here" required>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>
